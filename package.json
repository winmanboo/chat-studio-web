{
  "name": "chat-studio",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_OPTIONS=--max-old-space-size=2048 next build",
    "start": "next start",
    "lint": "next lint",
    "version:patch": "node scripts/update-version.js patch",
    "version:minor": "node scripts/update-version.js minor",
    "version:major": "node scripts/update-version.js major",
    "version:dev": "node scripts/update-version.js dev",
    "version:beta": "node scripts/update-version.js beta",
    "release:dev": "pnpm version:dev && pnpm build",
    "release:beta": "pnpm version:beta && pnpm build",
    "release:patch": "pnpm version:patch && pnpm build",
    "release:minor": "pnpm version:minor && pnpm build",
    "release:major": "pnpm version:major && pnpm build",
    "deploy:dev": "pnpm release:dev && pnpm start",
    "deploy:prod": "pnpm release:patch && pnpm start"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/x": "^1.6.0",
    "@types/highlight.js": "^9.12.4",
    "@types/markdown-it": "^14.1.2",
    "antd": "^5.26.7",
    "axios": "^1.7.9",
    "dotenv": "^17.2.2",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.9.0",
    "next": "14.2.31",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9",
    "eslint-config-next": "14.2.31",
    "typescript": "^5"
  }
}
